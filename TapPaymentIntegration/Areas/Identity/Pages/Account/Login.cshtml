@page
@model LoginModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration con;
@{
    string googleCaptchaKey = con.GetSection("GoogleCaptcha")["SiteKey"];
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}

<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="#" class="h1"><b>Tamarran</b></a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Sign in to Enter in Tamarran</p>

            <form method="post">
                <div class="input-group mb-3">
                 <input type="email" class="form-control" asp-for="Input.Email" placeholder="Enter The Email" >
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input id="password-field" type="password" class="form-control" asp-for="Input.Password" placeholder="Enter The Password" >
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-eye toggle-password" toggle="#password-field"></span>
                           
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember" asp-for="Input.RememberMe">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" id="loginBtn" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <p class="mb-1" style="padding:10px!important">
                <center> <a asp-action="ForgotPassword" asp-controller="Accounts" target="_blank">Forgot Password</a></center>
            </p>
            <p class="mb-1">
                <div asp-validation-summary="All" class="text-danger"></div>
            </p>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(".toggle-password").click(function() {

            $(this).toggleClass("fa-eye fa-eye-slash");
            if ($('#password-field').attr("type") == "password") {
                $('#password-field').attr("type", "text");
            }
            else {
                $('#password-field').attr("type", "password");
            }
        });
    </script>


