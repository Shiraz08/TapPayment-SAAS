@model TapPaymentIntegration.Models.Roles.ChangePassword
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<br />
<section class="content">
    <div class="container-fluid">
        <div class="card card-secondary">
            <div class="card-header">
                <h5 class="text-center mb-0" style="font-weight:700;color:white;">Change Password</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("ChangePassword", "Accounts", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Old Password&nbsp;<span style="color:red!important"><b>*</b></span></label>
                                <input asp-for="OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>New Password&nbsp;<span style="color:red!important"><b>*</b></span></label>
                                <input asp-for="NewPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Confirm Password&nbsp;<span style="color:red!important"><b>*</b></span></label>
                                <input asp-for="ConfirmPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                            </div>
                        </div>                
                        <div class="col-md-3">
                            <div style="padding-top: 22px;">
                                <button class="btn btn-success mt-2" type="submit" tabindex="6">Update password</button>
                            </div>
                        </div>
                        <p class="mb-1">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

